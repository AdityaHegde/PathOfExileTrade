{
  "compilerOptions": {
    "target": "es2020",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "dom", "es2020"
    ],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,

    "baseUrl": ".",
    "paths": {
      "@model/*": ["src/typescript/model/*"],
      "@component/*": ["src/typescript/component/*"],
      "@typescript/*": ["src/typescript/*"]
    }
  },
  "include": [
    "gulpfile.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
